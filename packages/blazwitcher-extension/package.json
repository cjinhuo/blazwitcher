{
	"name": "blazwitcher",
	"displayName": "Blazwitcher: Fuzzy Pinyin Search & Tab Switch In Blazing Speed",
	"version": "1.0.0",
	"description": "Blazwitcher is a local tool for searching tabs, bookmarks, and history, with support for fuzzy Pinyin search.",
	"author": "cjinhuo@qq.com",
	"scripts": {
		"prebuild": "npx tsx scripts/pre-build.ts",
		"dev": "pnpm run prebuild && plasmo dev",
		"build": "pnpm run prebuild && plasmo build",
		"package": "plasmo build && plasmo package",
		"help": "plasmo --help",
		"debug": "plasmo dev --verbose",
		"fetch-releases": "npx tsx scripts/fetch-github-releases.ts",
		"push-release": "npx tsx scripts/push-new-release.ts"
	},
	"dependencies": {
		"@commitlint/config-conventional": "^19.2.2",
		"@douyinfe/semi-icons": "^2.86.0",
		"@douyinfe/semi-illustrations": "^2.86.0",
		"@douyinfe/semi-ui": "^2.86.0",
		"dotenv": "^17.2.0",
		"jotai": "^2.9.3",
		"lodash-es": "^4.17.21",
		"marked": "^16.1.1",
		"observable-hooks": "^4.2.4",
		"plasmo": "0.90.3",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"rxjs": "8.0.0-alpha.14",
		"styled-components": "^6.1.11",
		"text-search-engine": "1.5.0"
	},
	"devDependencies": {
		"@babel/parser": "^7.26.3",
		"@babel/traverse": "^7.26.4",
		"@ianvs/prettier-plugin-sort-imports": "4.1.1",
		"@types/chrome": "0.0.268",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "20.11.5",
		"@types/react": "18.2.48",
		"@types/react-dom": "18.2.18",
		"path-browserify": "^1.0.0",
		"typescript": "^5.7.3",
		"url": "^0.11.0"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"manifest": {
		"host_permissions": [
			"https://*/*",
			"http://*/*"
		],
		"commands": {
			"_execute_action": {
				"suggested_key": {
					"default": "Ctrl+Shift+K",
					"mac": "Command+Shift+K"
				},
				"description": "Blazwitcher"
			}
		},
		"action": {
			"default_title": "Blazwitcher"
		},
		"web_accessible_resources": [
			{
				"resources": [
					"sidepanel.html"
				],
				"matches": [
					"<all_urls>"
				]
			}
		],
		"permissions": [
			"tabs",
			"tabGroups",
			"bookmarks",
			"history",
			"storage",
			"windows",
			"favicon",
			"system.display",
			"sidePanel",
			"contextMenus",
			"scripting"
		],
		"offline_enabled": true
	}
}
