{
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"isolatedModules": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}
